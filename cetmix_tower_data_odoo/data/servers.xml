<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- SERVER: template-odoo -->
    <record id="server_template-odoo" model="cx.tower.server">
        <field name="name">template-odoo</field>
        <field name="ssh_username">admin</field>
        <field name="ssh_password">admin</field>
        <field name="ip_v4_address">1.2.3.4</field>
    </record>
    <record id="server_template-odoo_variable_odoo_image" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="server_id" ref="server_template-odoo" />
        <field name="variable_id" ref="variable_odoo_image" />
        <field name="value_char">{{ odoo_instance }}:17.0</field>
    </record>
    <record id="server_template-odoo_variable_odoo_instance" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="server_id" ref="server_template-odoo" />
        <field name="variable_id" ref="variable_odoo_instance" />
        <field name="value_char">myname-odoo</field>
    </record>
    <record id="server_template-odoo_variable_odoo_version" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="server_id" ref="server_template-odoo" />
        <field name="variable_id" ref="variable_odoo_version" />
        <field name="value_char">17.0</field>
    </record>
    <record id="server_template-odoo_variable_odoo_website_domain" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="server_id" ref="server_template-odoo" />
        <field name="variable_id" ref="variable_odoo_website_domain" />
        <field name="value_char"></field>
    </record>
    <record id="server_template-odoo_variable_postgres_instance" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="server_id" ref="server_template-odoo" />
        <field name="variable_id" ref="cetmix_tower_data_postgres.variable_postgres_instance" />
        <field name="value_char"></field>
    </record>

</odoo>
