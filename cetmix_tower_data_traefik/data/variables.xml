<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="variable_traefik_image_name" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_image_name</field>
    </record>

    <record id="variable_traefik_instance_name" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_instance_name</field>
    </record>
    <data noupdate="1">

    <record id="variable_traefik_email" model="cx.tower.variable">
        <field name="readonly">False</field>
        <field name="name">traefik_email</field>
    </record>
    </data>
    <data noupdate="1">
    <record id="global_value_traefik_email" model="cx.tower.variable.value">
        <field name="readonly">False</field>
        <field name="variable_id" ref="variable_traefik_email" />
        <field name="is_global">True</field>
        <field name="value_char">notify@example.com</field>
    </record>
    </data>
    <data noupdate="1">

    <record id="variable_traefik_url_production" model="cx.tower.variable">
        <field name="readonly">False</field>
        <field name="name">traefik_url_production</field>
    </record>
    </data>
    <data noupdate="1">
    <record id="global_value_traefik_url_production" model="cx.tower.variable.value">
        <field name="readonly">False</field>
        <field name="variable_id" ref="variable_traefik_url_production" />
        <field name="is_global">True</field>
        <field name="value_char">https://acme-v02.api.letsencrypt.org/directory</field>
    </record>
    </data>
    <data noupdate="1">

    <record id="variable_traefik_url_staging" model="cx.tower.variable">
        <field name="readonly">False</field>
        <field name="name">traefik_url_staging</field>
    </record>
    </data>
    <data noupdate="1">
    <record id="global_value_traefik_url_staging" model="cx.tower.variable.value">
        <field name="readonly">False</field>
        <field name="variable_id" ref="variable_traefik_url_staging" />
        <field name="is_global">True</field>
        <field name="value_char">https://acme-staging-v02.api.letsencrypt.org/directory</field>
    </record>
    </data>

    <record id="variable_traefik_container_name" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_container_name</field>
    </record>
    <record id="global_value_traefik_container_name" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_traefik_container_name" />
        <field name="is_global">True</field>
        <field name="value_char">{{ traefik_instance_name }}</field>
    </record>

    <record id="variable_traefik_instance_path" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_instance_path</field>
    </record>
    <record id="global_value_traefik_instance_path" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_traefik_instance_path" />
        <field name="is_global">True</field>
        <field name="value_char">{{ traefik_root }}/{{ traefik_instance_name }}</field>
    </record>

    <record id="variable_traefik_log_level" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_log_level</field>
    </record>
    <record id="global_value_traefik_log_level" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_traefik_log_level" />
        <field name="is_global">True</field>
        <field name="value_char">INFO</field>
    </record>

    <record id="variable_traefik_url" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_url</field>
    </record>
    <record id="global_value_traefik_url" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_traefik_url" />
        <field name="is_global">True</field>
        <field name="value_char">{{ traefik_url_production }}</field>
    </record>

    <record id="variable_traefik_root" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_root</field>
    </record>
    <record id="global_value_traefik_root" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_traefik_root" />
        <field name="is_global">True</field>
        <field name="value_char">{{ tower_root }}/traefik</field>
    </record>

    <record id="variable_traefik_volume" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">traefik_volume</field>
    </record>
    <record id="global_value_traefik_volume" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_traefik_volume" />
        <field name="is_global">True</field>
        <field name="value_char">{{ traefik_instance_path }}/.acme</field>
    </record>

</odoo>
