<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="server_view_tree" model="ir.ui.view">
        <field name="name">Cetmix Tower Server Tree</field>
        <field name="model">cx.tower.server</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="status" />
            </tree>
        </field>
    </record>

    <record id="server_view_form" model="ir.ui.view">
        <field name="name">Cetmix Tower Server Tree</field>
        <field name="model">cx.tower.server</field>
        <field name="arch" type="xml">
            <form string="Server">
                <header>
                    <field name="status" widget="statusbar" />
                </header>
                <sheet>
                <div class="oe_button_box" name="button_box">
                        <!-- <button name="preview_sale_order"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                                <span class="o_stat_text">Preview</span>
                            </div>
                        </button>
                        <button name="action_view_invoice"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button> -->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page name="General" string="General Settings">
                            <group name="root">
                                <group name="main">
                                    <field name="partner_id" />
                                    <field name="os_id" />
                                    <field name="tag_ids" widget="many2many_tags" />
                                    <field name="ip_v4_address" />
                                    <field name="ip_v6_address" />
                                    <field name="ip_v6_address" />
                                </group>
                                <group name="ssh">
                                    <field name="ssh_auth_mode" />
                                    <field name="ssh_port" />
                                    <field name="ssh_username" />
                                    <field name="ssh_password" />
                                    <field name="ssh_key" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_servers" model="ir.actions.act_window">
        <field name="name">Servers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cx.tower.server</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--## Menu ##-->
    <menuitem
        id="menu_root"
        name="Cetmix Tower"
        groups="group_user"
        web_icon="cx_tower_server,static/description/icon.png"
    />
    <menuitem
        id="menu_servers"
        name="Servers"
        action="action_servers"
        parent="menu_root"
        groups="group_user"
        sequence="3"
    />

</odoo>
