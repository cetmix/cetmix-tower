<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="cx_tower_server_view_tree" model="ir.ui.view">
        <field name="name">cx.tower.server.view.tree</field>
        <field name="model">cx.tower.server</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="partner_id" optional="show" />
                <field
                    name="tag_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    optional="show"
                />
                <field name="color" widget="color_picker" optional="show" />
            </tree>
        </field>
    </record>

    <record id="cx_tower_server_view_form" model="ir.ui.view">
        <field name="name">cx.tower.server.view.form</field>
        <field name="model">cx.tower.server</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="test_ssh_connection"
                        type="object"
                        string="Test Connection"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- <button name="preview_sale_order" type="object" class="oe_stat_button" icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                                <span class="o_stat_text">Preview</span>
                            </div>
                        </button> -->
                        <button
                            name="action_open_command_logs"
                            type="object"
                            string="Command Logs"
                            class="oe_stat_button"
                            icon="fa-bars"
                        />
                        <button
                            name="action_open_plan_logs"
                            type="object"
                            string="Flightplan Logs"
                            class="oe_stat_button"
                            icon="fa-bars"
                        />

                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                        <field name="color" widget="color_picker" />
                    </div>
                    <notebook>
                        <page name="General" string="General Settings">
                            <group name="root">
                                <group name="main">
                                    <field name="partner_id" />
                                    <field name="os_id" />
                                    <field
                                        name="tag_ids"
                                        widget="many2many_tags"
                                        options="{'color_field': 'color'}"
                                    />
                                    <field name="ip_v4_address" />
                                    <field name="ip_v6_address" />
                                </group>
                                <group name="ssh">
                                    <field name="ssh_auth_mode" />
                                    <field name="ssh_port" />
                                    <field name="ssh_username" />
                                    <field name="use_sudo" />
                                    <field
                                        name="ssh_password"
                                        attrs="{'required': [('ssh_auth_mode', '=', 'p')]}"
                                        password="True"
                                    />
                                    <field
                                        name="ssh_key_id"
                                        attrs="{'required': [('ssh_auth_mode', '=', 'k')]}"
                                    />
                                </group>
                                <field name="note" />
                            </group>
                        </page>
                        <page name="variables" string="Variables">
                            <field name="variable_value_ids" order="variable_name">
                                <tree editable="bottom">
                                    <field name="variable_name" invisible="1" />
                                    <field name="variable_id" />
                                    <field name="value_char" />
                                </tree>
                                <form>
                                    <group>
                                        <field name="variable_id" />
                                        <field name="value_char" />
                                    </group>
                                    <field
                                        name="note"
                                        placeholder="Put your notes here..."
                                    />
                                </form>
                            </field>
                        </page>
                        <page name="secrets" string="Secrets">
                            <field
                                name="secret_ids"
                                context="{'default_key_type': 's', 'from_server': True}"
                            >
                                <tree>
                                    <field name="name" />
                                    <field name="key_ref" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cx_tower_server_search_view" model="ir.ui.view">
        <field name="name">cx.tower.server.view.search</field>
        <field name="model">cx.tower.server</field>
        <field name="arch" type="xml">
            <search string="Search Servers">
                <field name="name" string="Server" />
                <field name="os_id" />
                <field name="tag_ids" />
                <filter
                    string="Archived"
                    name="archived"
                    domain="[('active', '=', False)]"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="OS"
                        name="group_by_os"
                        domain="[]"
                        context="{'group_by': 'os_id'}"
                    />
                </group>
            </search>
        </field>
    </record>


    <record id="action_cx_tower_server" model="ir.actions.act_window">
        <field name="name">Servers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cx.tower.server</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="cx_tower_server_search_view" />
    </record>

</odoo>
