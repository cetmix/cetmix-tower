<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="variable_doodba_name" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_name</field>
    </record>

    <record id="variable_doodba_path" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_path</field>
    </record>
    <record id="global_value_doodba_path" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_doodba_path" />
        <field name="is_global">True</field>
        <field name="value_char">{{ doodba_root }}/{{ doodba_name }}</field>
    </record>

    <record id="variable_doodba_root" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_root</field>
    </record>
    <record id="global_value_doodba_root" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_doodba_root" />
        <field name="is_global">True</field>
        <field name="value_char">{{ tower_root }}/doodba</field>
    </record>
    <data noupdate="1">

    <record id="variable_doodba_instance_repo_path" model="cx.tower.variable">
        <field name="readonly">False</field>
        <field name="name">doodba_instance_repo_path</field>
    </record>
    </data>
    <data noupdate="1">
    <record id="global_value_doodba_instance_repo_path" model="cx.tower.variable.value">
        <field name="readonly">False</field>
        <field name="variable_id" ref="variable_doodba_instance_repo_path" />
        <field name="is_global">True</field>
        <field name="value_char">{{ doodba_path }}/doodba</field>
    </record>
    </data>

</odoo>
