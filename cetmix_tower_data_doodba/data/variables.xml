<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="variable_doodba_instance_name" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_instance_name</field>
    </record>

    <record id="variable_doodba_addons_path" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_addons_path</field>
    </record>
    <record id="global_value_doodba_addons_path" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_doodba_addons_path" />
        <field name="is_global">True</field>
        <field name="value_char">{{ doodba_path }}/odoo/auto/addons</field>
    </record>

    <record id="variable_doodba_path" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_path</field>
    </record>
    <record id="global_value_doodba_path" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_doodba_path" />
        <field name="is_global">True</field>
        <field name="value_char">{{ doodba_root }}/{{ doodba_instance_name }}</field>
    </record>

    <record id="variable_doodba_root" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_root</field>
    </record>
    <record id="global_value_doodba_root" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_doodba_root" />
        <field name="is_global">True</field>
        <field name="value_char">{{ tower_root }}/doodba</field>
    </record>

    <record id="variable_doodba_src_path" model="cx.tower.variable">
        <field name="readonly">True</field>
        <field name="name">doodba_src_path</field>
    </record>
    <record id="global_value_doodba_src_path" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="variable_id" ref="variable_doodba_src_path" />
        <field name="is_global">True</field>
        <field name="value_char">{{ doodba_path }}/odoo/custom/src</field>
    </record>

</odoo>
