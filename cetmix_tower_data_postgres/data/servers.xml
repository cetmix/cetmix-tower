<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- SERVER: template-postgres -->
    <record id="server_template-postgres" model="cx.tower.server">
        <field name="name">template-postgres</field>
        <field
            name="tag_ids"
            eval="[(6, 0, [ref('cetmix_tower_data_postgres.tag_cetmix_tower_data_postgres')])]"
        />
        <field name="ssh_username">admin</field>
        <field name="ssh_password">admin</field>
        <field name="ip_v4_address">1.2.3.4</field>
    </record>
    <record id="server_template-postgres_variable_postgres_image" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="server_id" ref="server_template-postgres" />
        <field name="variable_id" ref="variable_postgres_image" />
        <field name="value_char">postgres:16</field>
    </record>
    <record id="server_template-postgres_variable_postgres_instance" model="cx.tower.variable.value">
        <field name="readonly">True</field>
        <field name="server_id" ref="server_template-postgres" />
        <field name="variable_id" ref="variable_postgres_instance" />
        <field name="value_char">postgres16</field>
    </record>

</odoo>
