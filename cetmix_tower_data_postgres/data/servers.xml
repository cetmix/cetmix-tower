<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- SERVER: template-postgres -->
    <record id="server_template-postgres" model="cx.tower.server">
        <field name="name">template-postgres</field>
        <field name="ssh_username">admin</field>
        <field name="ssh_password">admin</field>
        <field name="ip_v4_address">1.2.3.4</field>
    </record>
    <record id="server_template-postgres_variable_postgres_image_name" model="cx.tower.variable.value">
        <field name="module">cetmix_tower_data_postgres</field>
        <field name="server_id" ref="server_template-postgres" />
        <field name="variable_id" ref="variable_postgres_image_name" />
        <field name="value_char">{{ postgres_instance_name }}</field>
    </record>
    <record id="server_template-postgres_variable_postgres_image_tag" model="cx.tower.variable.value">
        <field name="module">cetmix_tower_data_postgres</field>
        <field name="server_id" ref="server_template-postgres" />
        <field name="variable_id" ref="variable_postgres_image_tag" />
        <field name="value_char">16</field>
    </record>
    <record id="server_template-postgres_variable_postgres_instance_name" model="cx.tower.variable.value">
        <field name="module">cetmix_tower_data_postgres</field>
        <field name="server_id" ref="server_template-postgres" />
        <field name="variable_id" ref="variable_postgres_instance_name" />
        <field name="value_char">shared-postgres</field>
    </record>
    <record id="server_template-postgres_variable_postgres_password" model="cx.tower.variable.value">
        <field name="module">cetmix_tower_data_postgres</field>
        <field name="server_id" ref="server_template-postgres" />
        <field name="variable_id" ref="variable_postgres_password" />
        <field name="value_char"></field>
    </record>

</odoo>
